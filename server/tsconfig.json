{
  "compilerOptions": {
    "target": "ES2020",               // modern JS target
    "module": "NodeNext",               // emit ES module syntax
    "outDir": "dist",                 // compiled JS output
    "rootDir": "src",                 // source folder
    "strict": true,                   // enable all strict checks
    "moduleResolution": "nodenext",  // Node 16+ ESM resolution
    "esModuleInterop": true,          // allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,             // skip checking node_modules types
    "resolveJsonModule": true,        // allow importing JSON
    "allowSyntheticDefaultImports": true, // allows default imports
    "noImplicitAny": true,            // catch implicit `any` types
    "strictNullChecks": true,         // catch null/undefined
    "noEmitOnError": true              // prevent emit if TS errors
  },
  "include": ["src", "src/types"],
  "exclude": ["node_modules", "dist"]
}
